setup
dc build --build-arg APP_ENV=prod php
dc run --rm php composer install
dc run --rm php bin/console doctrine:schema:create --env=test

start
dc up -d db adminer php web 

migrate
dc run --rm php bin/console doctrine:migrations:migrate -n

tests:unit
dc run --rm php vendor/bin/simple-phpunit

tests:bdd
dc run --rm php vendor/bin/behat


quickstart
	setup
	start
	migrate

